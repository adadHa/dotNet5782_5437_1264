<Window x:Class="PL.CustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="400" Width="400">
    <Grid Name="OptionsCustomerWindow" HorizontalAlignment="Stretch" Grid.Row="1"
        VerticalAlignment="Stretch" Visibility="Visible" Background="{StaticResource BackgroundColor60}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="1.5*"/>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10"  Background="{StaticResource BackgroundColor30}" >
            <Button Name="CloseOptionsCustomerWindowButton"  Template="{StaticResource ButtonTemplate}"  HorizontalAlignment="right" VerticalAlignment="Bottom" Width="20" Height="20" Margin="0,5,5,0">

            </Button>
        </StackPanel>

        <TextBlock Name="TitleTextBox" Grid.Row="1" Text="  Customer " FontSize="46" Grid.Column="0" />
        <TextBlock Name="IdTextBlock" Grid.Row="1" Text="Id" FontSize="16" Grid.Column="0" VerticalAlignment="Bottom" Margin="50,0,0,16"/>
        <Grid Grid.RowSpan="5" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="0" Width="300" HorizontalAlignment="left" Margin="50,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Name="NameValueTextBlock" Grid.Row="0" Text="Name  " FontSize="14" Grid.Column="0" HorizontalAlignment="Right" Margin="39,0,0,40" Grid.RowSpan="2"   />
            <TextBox Name="NameValueTextBox" Text="{Binding Path=Name}" Grid.Row="0" Grid.Column="1" FontSize="14" BorderThickness="0,0,0,1" Margin="10,0,10,20"/>

            <TextBlock Name="PhoneValueTextBlock" Grid.Row="1" Text="Phone"  FontSize="14" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,5,0"/>
            <TextBox Text="" Grid.Column="1" FontSize="14" Margin="10,40,10,22" BorderThickness="0,0,0,1" Grid.RowSpan="2"/>

            <TextBlock Name="CounterSendAndSuppliedValueTextBlock" Grid.Row="2" Text="Longitude" FontSize="14" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,5,0" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path=CounterSendAndSupplied}" FontSize="14" Margin="10,0,59,22" BorderThickness="0,0,0,1" />

            <TextBlock Name="CounterSendAndNotSupplied" Grid.Row="3" Text="Lattitude" FontSize="14" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Path=CounterSendAndNotSupplied}" FontSize="14" Margin="10,0,59,22" BorderThickness="0,0,0,1"/>

            <TextBlock Name="CounterRecievedParcels" Grid.Row="4" Text="Recieved Parcels " FontSize="14" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Path=CounterRecievedParcels}" FontSize="14" Margin="10,0,59,22" BorderThickness="0,0,0,1"/>

            <TextBlock Name="CounterParcelsOnMyWay" Grid.Row="5" Text="Parcels On My Way " FontSize="14" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Path=CounterParcelsOnMyWay}" FontSize="14" Margin="10,0,59,22" BorderThickness="0,0,0,1"/>
        </Grid>
    </Grid>
</Window>